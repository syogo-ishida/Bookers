<div class="wrap">
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:miss_notice] %>
    <div class="flash unsuccessful">
      <%= flash[:miss_notice] %>
    </div>
  <% end %>
  <section>
    <p>Title:<%= @book.title %></p>
    <p>Body:<%= @book.body %></p>
    <div class="">
      <%= link_to "Edit", edit_book_path(@book) %> | <a href="/books">back</a>
    </div>
  </section>

</div>