<section id="EditBookSection">
  <div class="wrap">
    <h1>Editing Book</h1>
    <%= form_with model: @book, local:true do |f| %>
        <%= render 'layouts/error_messages', model: @book %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Update Book' %>
    <% end %>
    <div class="">
      <%= link_to "Show", book_path(@book) %> | <a href="/books">back</a>
    </div>
  </div>
</section>